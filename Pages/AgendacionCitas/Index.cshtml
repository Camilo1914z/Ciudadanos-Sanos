@page
@model Ciudadanos_Sanos.Pages.AgendacionCitas.IndexModel
@{
}
<h1>Registro de Citas</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Crear Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AgendacionCitas[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgendacionCitas[0].Patiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgendacionCitas[0].Date)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AgendacionCitas)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Doctor)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Patiente)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
        }
    </tbody>
</table>